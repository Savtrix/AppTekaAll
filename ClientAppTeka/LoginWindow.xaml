<Window x:Class="ClientAppTeka.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientAppTeka"
        mc:Ignorable="d"
        Title="Logowanie" Height="180" Width="350">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="25" />
            <RowDefinition Height="5" />
            <RowDefinition Height="25" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>
        <Label Content="Login:" Grid.Row="1" />
        <TextBox Grid.Row="1" Grid.Column="1"  x:Name="Login" />
        <Label Content="Hasło:" Grid.Row="3" />
        <PasswordBox Grid.Row="3"  Grid.Column="1" x:Name="Password" />
        <Button Content="Zaloguj" Grid.Column="1" Grid.Row="5" Width="100" Height="30" Click="Login_Click" />
    </Grid>
</Window>